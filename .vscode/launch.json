	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Client DEBUG",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/client/main.go",
			"args": ["-debug", "-debugfile", "./debugstream"],
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Launch Client",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/client/main.go",
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Launch Current File",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${file}",
			"cwd": "${workspaceFolder}"
		}

